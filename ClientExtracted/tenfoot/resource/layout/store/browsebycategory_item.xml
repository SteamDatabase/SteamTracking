<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/store/store.css" />
		<include src="file://{resources}/styles/store/browsebycategory.css" />
	</styles>

	<StoreBrowseByCategoryItem tabindex="auto" selectionpos="auto" class="CapsuleControllerSupportContainer">
		<Panel class="HeaderImageWrapper">
			<Image id="HeaderImage" scaling="stretch" />

			<Label id="DiscountDescription" />
			<Panel class="ImageBorder" />
		</Panel>

		<Panel class="ItemDetails OnlyVisibleOnCarouselFocus">
			<Label id="ItemName" text="#Store_BrowseByCategory_ItemName" />
			<Panel class="DetailsIconRow">
				<Image id="PlatformSteamPlay" src="file://{images}/store/icon_steamplay.png" />
				<Image id="PlatformWindows" src="file://{images}/store/icon_platform_win.png" />
				<Image id="PlatformMac" src="file://{images}/store/icon_platform_mac.png" />
				<Image id="PlatformLinux" src="file://{images}/store/icon_platform_linux.png" />
				<Image id="PlatformStreamingVideo" src="file://{images}/store/icon_platform_streamingvideo.png" />
				<Panel class="CapsuleControllerSupport" />
			</Panel>

		</Panel>
		<Panel class="ReleaseDateRow OnlyVisibleOnCarouselFocus">
			<Label class="SecondaryLabel" id="ReleaseDate" text="" />
			<Label class="Metadata" text="#Store_BrowseByCategory_ReleaseDateText" />
		</Panel>
		<Panel id="GenreRow" class="GenreRow OnlyVisibleOnCarouselFocus">
			<Label class="SecondaryLabel" id="GenreLabel" text="#Store_BrowseByCategory_Genre" />
			<Label class="Metadata" id="Genres" />
		</Panel>
		
		<Panel class="PriceRow OnlyVisibleOnCarouselFocus">
			<Label id="DiscountCountdown" />
			<StorePrice id="ItemPrice" />
		</Panel>
	</StoreBrowseByCategoryItem>
</root>
