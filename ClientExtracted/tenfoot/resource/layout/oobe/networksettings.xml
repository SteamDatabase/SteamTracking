<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/wizardstyles.css" />
		<include src="file://{resources}/styles/oobe/oobe.css" />
	</styles>

	<OOBENetworkSettingsWizardChild class="WizardChild" tabindex="auto" selectionpos="auto">
		<Label class="WizardChildTitle" text="#OOBE_NetworkSettings_Title" />
		<Label class="WizardChildDescription" text="#OOBE_NetworkSettings_Description" />

		<Panel id="SettingsContainer">
			<SettingsPanel_Network class="SettingsSection SectionVisible SettingsContained" defaultfocus="AvailableNetworksList" oobe="true" />
		</Panel>
		
		<Panel id="WizardButtons" tabindex="auto" selectionpos="auto">
			<Button class="WizardButton GapRight" id="ButtonDone" onactivate="WizardButtonNext()">
				<Label id="Label" text="#WizardButton_Done" />
			</Button>
		</Panel>
	</OOBENetworkSettingsWizardChild>

</root>
