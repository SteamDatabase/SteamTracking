<root>
	<styles>
		<include src="file://{resources}/styles/steamstyles.css" />
		<include src="file://{resources}/styles/settings.css" />
	</styles>

	<SettingsPanel_RemoteClients_AdvancedHost class="SettingsModal" defaultfocus="EnableHardwareEncoding" tabindex="auto" selectionpos="auto">

		<!-- main panel -->
    <Panel class="SettingsBottomPanel" tabindex="auto" selectionpos="auto">
		  <Panel class="SettingsContent">
			  <Label text="#Settings_RemoteClients_AdvancedHostOptions_Description" />
			
			  <Panel class="FlowDown">
					<Panel class="Spacer" />
					<ToggleButton class="CheckBox" id="DynamicallyAdjustResolution" onactivate="ToggleDynamicallyAdjustResolution()" text="#Settings_RemoteClients_DynamicallyAdjustResolution" />

					<Panel class="Spacer" />
					<ToggleButton class="CheckBox" id="EnableHardwareEncoding" onactivate="ToggleHardwareEncoding()" text="#Settings_RemoteClients_EnableHardwareEncoding" />
					<Panel class="FlowDown SettingsSubcheckboxes">
						<ToggleButton class="CheckBox" id="EnableHardwareEncodingNVIDIA" onactivate="ToggleHardwareEncodingNVIDIA()" text="#Settings_RemoteClients_EnableHardwareEncodingNVIDIA" />
						<ToggleButton class="CheckBox" id="EnableHardwareEncodingAMD" onactivate="ToggleHardwareEncodingAMD()" text="#Settings_RemoteClients_EnableHardwareEncodingAMD" />
						<ToggleButton class="CheckBox" id="EnableHardwareEncodingIntel" onactivate="ToggleHardwareEncodingIntel()" text="#Settings_RemoteClients_EnableHardwareEncodingIntel" />
					</Panel>

					<Panel class="Spacer" />
					<Panel class="VertContainer">
						<Label class="SettingsLabel" text="#Settings_RemoteClients_SoftwareEncodingThreads" />
						<DropDown id="SoftwareEncodingThreads" class="Filter" tabindex="auto">
							<Label id="0" text="#Settings_RemoteClients_SoftwareEncodingThreads_0" />
							<Label id="1" text="#Settings_RemoteClients_SoftwareEncodingThreads_1" />
							<Label id="2" text="#Settings_RemoteClients_SoftwareEncodingThreads_2" />
							<Label id="3" text="#Settings_RemoteClients_SoftwareEncodingThreads_3" />
							<Label id="4" text="#Settings_RemoteClients_SoftwareEncodingThreads_4" />
							<Label id="5" text="#Settings_RemoteClients_SoftwareEncodingThreads_5" />
							<Label id="6" text="#Settings_RemoteClients_SoftwareEncodingThreads_6" />
							<Label id="7" text="#Settings_RemoteClients_SoftwareEncodingThreads_7" />
							<Label id="8" text="#Settings_RemoteClients_SoftwareEncodingThreads_8" />
						</DropDown>
					</Panel>

					<Panel class="Spacer" />
					<Label class="SettingsLabel" text="#Settings_RemoteClients_EnableTrafficPriority_Description" />
					<ToggleButton class="CheckBox" id="EnableTrafficPriority" onactivate="ToggleTrafficPriority()" text="#Settings_RemoteClients_EnableTrafficPriority" />
			  </Panel>
		  </Panel>
    </Panel>
		
	</SettingsPanel_RemoteClients_AdvancedHost>
</root>
